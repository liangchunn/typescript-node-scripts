{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "build",
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "exclude": ["node_modules", "build", "coverage", "dist", "setupTests.ts"]
}

{
  "name": "typescript-node-scripts",
  "version": "1.3.0",
  "description": "Create Node.js apps based on TypeScript with zero-configuration.",
  "main": "bin/typescript-node-scripts.js",
  "scripts": {
    "test": "node bin/typescript-node-scripts.js test",
    "start": "node bin/typescript-node-scripts.js start",
    "build": "node bin/typescript-node-scripts.js build",
    "initApp": "node bin/typescript-node-scripts.js create",
    "e2e:ci": "./tests/e2e.sh",
    "e2e:local": "docker build -t tns-docker . && docker run tns-docker",
    "lint": "eslint .",
    "commit": "git-cz",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "bin": {
    "typescript-node-scripts": "./bin/typescript-node-scripts.js"
  },
  "keywords": [],
  "author": "Liang Chun Wong",
  "repository": "https://github.com/liangchunn/typescript-node-scripts",
  "license": "MIT",
  "dependencies": {
    "@babel/code-frame": "7.0.0",
    "@babel/core": "7.3.4",
    "@babel/preset-env": "7.3.4",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.1.0",
    "babel-loader": "8.0.5",
    "filesize": "4.1.2",
    "chalk": "2.4.2",
    "fork-ts-checker-webpack-plugin": "1.0.0",
    "fs-extra": "7.0.1",
    "jest": "24.1.0",
    "pstree.remy": "1.1.2",
    "strip-ansi": "5.0.0",
    "text-table": "0.2.0",
    "ts-jest": "24.0.0",
    "ts-loader": "5.3.1",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-loader": "3.5.4",
    "webpack": "4.29.6",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.11",
    "@types/text-table": "^0.2.0",
    "commitizen": "^3.0.5",
    "conventional-changelog-cli": "^2.0.11",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.9.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "typescript": "^3.2.1"
  },
  "peerDependencies": {
    "typescript": ">=3.x"
  },
  "engines": {
    "node": ">=8"
  },
  "lint-staged": {
    "ignore": [
      "lib/formatters/*.js",
      "bin/*",
      "node_modules/**/*"
    ],
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "greenkeeper": {
    "ignore": [
      "@commitlint/cli",
      "@commitlint/config-conventional",
      "@types/jest",
      "@types/node",
      "@types/text-table",
      "commitizen",
      "conventional-changelog-cli",
      "cz-conventional-changelog",
      "husky",
      "lint-staged",
      "prettier"
    ]
  }
}

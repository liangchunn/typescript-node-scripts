{
  "name": "typescript-node-scripts",
  "version": "1.0.3",
  "description": "Create Node.js apps based on TypeScript with zero-configuration.",
  "main": "bin/typescript-node-scripts.js",
  "scripts": {
    "test": "node bin/typescript-node-scripts.js test",
    "start": "node bin/typescript-node-scripts.js start",
    "build": "node bin/typescript-node-scripts.js build",
    "initApp": "node bin/typescript-node-scripts.js create",
    "e2e:ci": "./tests/e2e.sh",
    "e2e:local": "docker build -t tns-docker . && docker run tns-docker",
    "lint": "eslint .",
    "commit": "git-cz",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "bin": {
    "typescript-node-scripts": "./bin/typescript-node-scripts.js"
  },
  "keywords": [],
  "author": "Liang Chun Wong",
  "repository": "https://github.com/liangchunn/typescript-node-scripts",
  "license": "MIT",
  "dependencies": {
    "@babel/code-frame": "7.0.0",
    "@babel/core": "7.1.2",
    "@babel/preset-env": "7.1.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.4.2",
    "babel-loader": "8.0.4",
    "chalk": "2.4.1",
    "filesize": "3.6.1",
    "fork-ts-checker-webpack-plugin": "0.4.11",
    "fs-extra": "7.0.0",
    "jest": "23.5.0",
    "strip-ansi": "5.0.0",
    "text-table": "0.2.0",
    "ts-jest": "23.10.4",
    "ts-loader": "4.5.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-loader": "3.6.0",
    "webpack": "4.20.2",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@types/jest": "^23.1.0",
    "@types/node": "^10.3.3",
    "@types/text-table": "0.2.0",
    "commitizen": "^3.0.0",
    "conventional-changelog-cli": "^2.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "5.4.0",
    "eslint-plugin-prettier": "3.0.0",
    "husky": "^1.0.0-rc.13",
    "prettier": "1.14.3",
    "lint-staged": "7.3.0",
    "typescript": "3.0.1"
  },
  "peerDependencies": {
    "typescript": ">=2.x"
  },
  "engines": {
    "node": ">=6"
  },
  "lint-staged": {
    "ignore": [
      "lib/formatters/*.js",
      "bin/*",
      "node_modules/**/*"
    ],
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  }
}

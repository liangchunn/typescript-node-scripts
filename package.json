{
  "name": "typescript-node-scripts",
  "version": "2.0.1",
  "description": "Create Node.js apps based on TypeScript with zero-configuration.",
  "main": "bin/typescript-node-scripts.js",
  "scripts": {
    "watch": "tsc -p . --watch",
    "compile": "tsc -p .",
    "test": "node bin/typescript-node-scripts.js test",
    "start": "node bin/typescript-node-scripts.js start",
    "build": "node bin/typescript-node-scripts.js build",
    "initApp": "node bin/typescript-node-scripts.js create",
    "e2e:ci": "./tests/e2e.sh",
    "e2e:local": "docker build -t tns-docker . && docker run tns-docker",
    "lint": "tslint -p .",
    "commit": "git-cz",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md",
    "prepublishOnly": "yarn compile"
  },
  "bin": {
    "typescript-node-scripts": "./bin/typescript-node-scripts.js"
  },
  "keywords": [],
  "author": "Liang Chun Wong",
  "repository": "https://github.com/liangchunn/typescript-node-scripts",
  "license": "MIT",
  "dependencies": {
    "@babel/code-frame": "7.0.0",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "24.7.1",
    "babel-loader": "8.0.5",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "chalk": "2.4.2",
    "filesize": "4.1.2",
    "fork-ts-checker-webpack-plugin": "1.0.3",
    "fs-extra": "7.0.1",
    "jest": "24.7.1",
    "lodash": "4.17.11",
    "pstree.remy": "1.1.2",
    "strip-ansi": "5.2.0",
    "text-table": "0.2.0",
    "ts-jest": "24.0.2",
    "ts-loader": "5.3.3",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.15.0",
    "tslint-loader": "3.5.4",
    "webpack": "4.30.0",
    "webpack-node-externals": "1.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/babel-code-frame": "^6.20.2",
    "@types/case-sensitive-paths-webpack-plugin": "^2.1.2",
    "@types/filesize": "^4.1.0",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.11",
    "@types/text-table": "^0.2.0",
    "@types/webpack": "^4.4.27",
    "@types/webpack-node-externals": "^1.6.3",
    "commitizen": "^3.0.7",
    "conventional-changelog-cli": "^2.0.12",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.4.3"
  },
  "peerDependencies": {
    "typescript": ">=3.x"
  },
  "engines": {
    "node": ">=8"
  },
  "lint-staged": {
    "ignore": [
      "lib/formatters/*.js",
      "bin/*",
      "node_modules/**/*"
    ],
    "linters": {
      "*.js": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged"
    }
  },
  "greenkeeper": {
    "ignore": [
      "@commitlint/cli",
      "@commitlint/config-conventional",
      "@types/jest",
      "@types/node",
      "@types/text-table",
      "commitizen",
      "conventional-changelog-cli",
      "cz-conventional-changelog",
      "husky",
      "lint-staged",
      "prettier"
    ]
  }
}
